<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfileActivity">

    <ImageView
            android:src="@mipmap/profile_pic"
            android:layout_width="207dp"
            android:layout_height="136dp"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <TextView
            android:text="Ashraf Sarhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="176dp"
            android:textSize="24sp" android:gravity="center"/>

    <TextView
            android:text="Country:    Egypt"
            android:layout_width="294dp"
            android:layout_height="33dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="20dp" android:textSize="18sp"/>
    <TextView
            android:text="Track:    Android"
            android:layout_width="293dp"
            android:layout_height="32dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.018"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="296dp"
            android:layout_height="35dp"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp" android:text="Email:    ashraf.sar7an@gmail.com" android:textSize="18sp"/>
    <TextView
            android:text="Phone Number:    +201003227696"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="20dp" android:textSize="18sp"/>
    <TextView
            android:text="Slack Username:    @assar"
            android:layout_width="299dp"
            android:layout_height="28dp"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="20dp" android:textSize="18sp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:background="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintVertical_bias="0.275"
            app:layout_constraintEnd_toEndOf="parent" android:layout_height="1dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>